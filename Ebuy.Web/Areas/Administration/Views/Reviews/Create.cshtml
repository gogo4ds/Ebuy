@model CreateReviewViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Review for the product @Model.Product.Name</h2>
<label>Brand:</label>
<span>@Model.Product.BrandName</span>

<p>@Model.Product.Description</p>

<div class="form-group alert alert-warning col-xs-3" style="width: 20%; font-size: 1.1em">
    Price: $<span class="text-success" style="font-size: 1.2em">@Model.Product.Price</span>
</div>


<form asp-action="Create" asp-controller="Reviews" asp-area="Administration" method="post">

    <input type="hidden" asp-for="Product.Name" />
    <input type="hidden" asp-for="Product.Id" />
    <input type="hidden" asp-for="Product.Price" />
    <input type="hidden" asp-for="Product.BrandName" />
    <input type="hidden" asp-for="Product.Description" />

    <input type="hidden" asp-for="Review.ProductId" />

    <div class="row">
        <div class="form-group col-xs-10">
            <label asp-for="Review.Title">Title</label>
            <input asp-for="Review.Title" class="form-control" style="max-width: 1000px" />
            <span asp-validation-for="Review.Title"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-10">
            <label asp-for="Review.Content">Content</label>
            <textarea asp-for="Review.Content" rows="20" class="form-control" style="max-width: 1800px"></textarea>
            <span asp-validation-for="Review.Content"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Review.Score">Rating</label>
        <input type="number" asp-for="Review.Score" class="form-control" />
        <span asp-validation-for="Review.Score"></span>
    </div>

    <input type="submit" class="btn btn-success" value="Submit" />
</form>