@model CategoryCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" asp-controller="Categories" asp-area="Administration" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Order">Order</label>
        <input class="form-control" asp-for="Order" />
    </div>

    <div class="form-group">
        <label asp-for="ParentId">Parent Category</label>
        <select class="form-control" asp-for="ParentId">
            @if (Model.ParentId == null)
            {
                <option></option>
            }

            @foreach (var cat in this.ViewBag.ParentCategoriesDropDown)
            {
                <option value="@int.Parse(cat.Value)">@cat.Text</option>
            }
        </select>
        <br />
    </div>

    <input type="submit" class="btn btn-success" value="Edit" />
    <a asp-action="Index" asp-controller="Categories" asp-area="Products" class="btn btn-default">Cancel</a>
</form>
