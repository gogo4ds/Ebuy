@model CategoryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" asp-controller="Categories" asp-area="Administration" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Order">Order</label>
        <input class="form-control" asp-for="Order" />
    </div>
    
    <div class="form-group">
        <label asp-for="ParentId">Parent Category</label>
        <select asp-for="ParentId" class="form-control">
            <option></option>
            @foreach (var cat in this.ViewBag.ParentCategoriesDropDown)
            {
                <option value="@int.Parse(cat.Value)">@cat.Text</option>
            }
        </select>
        <br />
    </div>

    <input type="submit" class="btn btn-success" value="Create" />
</form>